# =============================================================================
# API KEYS (Required)
# =============================================================================

# API Key (Required for default models)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GROQ_API_KEY=your_groq_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Active database type (mysql, postgresql, sqlite)
ACTIVE_DATABASE=mysql

# MySQL Connection String
MYSQL_CONNECTION_STRING=mysql+mysqlconnector://root:password@localhost/database

# PostgreSQL Connection String
POSTGRESQL_CONNECTION_STRING=postgresql://user:password@localhost/dbname

# SQLite Connection String
SQLITE_CONNECTION_STRING=sqlite:///./database.db

# =============================================================================
# QUERY LANGUAGE CONFIGURATION
# =============================================================================

# Active query language (sql, mongodb, elasticsearch, cypher)
ACTIVE_QUERY_LANGUAGE=sql

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file path
LOG_FILE=lang2query.log

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Development environment
ENVIRONMENT=development
