# Lang2Query Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS (Required)
# =============================================================================

# Anthropic API Key (Required for default models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional API Keys for other providers
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Active database type (mysql, postgresql, sqlite)
ACTIVE_DATABASE=mysql

# MySQL Connection String
MYSQL_CONNECTION_STRING=mysql+mysqlconnector://root:password@localhost/database

# PostgreSQL Connection String
POSTGRESQL_CONNECTION_STRING=postgresql://user:password@localhost/dbname

# SQLite Connection String
SQLITE_CONNECTION_STRING=sqlite:///./database.db

# =============================================================================
# QUERY LANGUAGE CONFIGURATION
# =============================================================================

# Active query language (sql, mongodb, elasticsearch, cypher)
ACTIVE_QUERY_LANGUAGE=sql

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================

# Active domain (ecommerce, healthcare, finance)
ACTIVE_DOMAIN=ecommerce

# Custom table configurations (comma-separated)
CUSTOMER_TABLES=customer,sellers
ORDERS_TABLES=order_items,order_payments,order_reviews,orders
PRODUCT_TABLES=products,category_translation

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Routing Model
ROUTING_MODEL_PROVIDER=anthropic
ROUTING_MODEL_NAME=claude-3-5-sonnet-20240620
ROUTING_MODEL_TEMPERATURE=0.4

# Query Generation Model
QUERY_GEN_MODEL_PROVIDER=anthropic
QUERY_GEN_MODEL_NAME=claude-3-5-sonnet-20240620
QUERY_GEN_MODEL_TEMPERATURE=0.1

# Validation Model
VALIDATION_MODEL_PROVIDER=anthropic
VALIDATION_MODEL_NAME=claude-3-5-sonnet-20240620
VALIDATION_MODEL_TEMPERATURE=0.0

# =============================================================================
# FUZZY MATCHING CONFIGURATION
# =============================================================================

# Fuzzy matching algorithm (ratio, partial_ratio, token_sort_ratio, token_set_ratio)
FUZZY_SCORER=token_set_ratio

# Minimum confidence score (0-100)
FUZZY_MIN_CONFIDENCE=70

# Maximum number of candidates to return
FUZZY_MAX_CANDIDATES=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file path
LOG_FILE=lang2query.log

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum number of concurrent agents
MAX_CONCURRENT_AGENTS=3

# Timeout for operations in seconds
TIMEOUT_SECONDS=30

# Number of retry attempts
RETRY_ATTEMPTS=3

# Enable/disable result caching
CACHE_RESULTS=true

# =============================================================================
# KNOWLEDGE BASE CONFIGURATION
# =============================================================================

# Knowledge base file path
KB_FILE_PATH=kb.pkl

# Auto-generate knowledge base on startup
KB_AUTO_GENERATE=false

# Update interval in hours
KB_UPDATE_INTERVAL_HOURS=24

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Development environment
ENVIRONMENT=development
